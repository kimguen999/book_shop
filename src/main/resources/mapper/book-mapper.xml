<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 해당 파일에 모든 쿼리문을 작성 -->
<!-- namespace에는 xml파일과 연결할 Mapper interface 파일명을 패키지를 포함하여 적어주세요 -->
<mapper namespace="com.green.book_shop_t.book.mapper.BookMapper">

    <resultMap id="book" type="com.green.book_shop_t.book.dto.BookDTO">
        <id column="BOOK_NUM"           property="bookNum"/>
        <result column="BOOK_TITLE"     property="bookTitle"/>
        <result column="AUTHOR"         property="author"/>
        <result column="BOOK_PRICE"     property="bookPrice"/>
        <result column="BOOK_STOCK"     property="bookStock"/>
        <result column="BOOK_INTRO"     property="bookIntro"/>
        <result column="PUBLISH_DATE"   property="publishDate"/>
        <result column="CATE_NUM"       property="cateNum"/>
<!--    <association property="" resultMap=""></association>
        1 : 1 관계는 associaation-->
        <collection property="bookImgList" resultMap="com.green.book_shop_t.book.mapper.BookImgMapper.bookImg"/>
        <!-- 1 : N관계는 collection,
        property는 변수명, resultMap은 땡겨올 클래스의 xml namespace.id -->
    </resultMap>

    <!--도서 1귄씩 등록 쿼리-->
    <insert id="insertBook">
        INSERT INTO SHOP_BOOK (
            BOOK_NUM
            , BOOK_TITLE
            , BOOK_PRICE
            , AUTHOR
            , BOOK_INTRO
            , PUBLISH_DATE
            , CATE_NUM
        ) VALUES (
            #{bookNum}
            , #{bookTitle}
            , #{bookPrice}
            , #{author}
            , #{bookIntro}
            , #{publishDate}
            , #{cateNum}
        )
    </insert>

    <!--도서 목록 조회-->
    <select id="bookList" resultMap="book">
        SELECT
            B.BOOK_NUM
            , BOOK_TITLE
            , BOOK_PRICE
            , UPLOAD_FILE_NAME
        FROM
            SHOP_BOOK B INNER JOIN BOOK_IMG I
        ON
            B.BOOK_NUM = I.BOOK_NUM
        WHERE
            IS_MAIN = 'Y'
        ORDER BY
            BOOK_NUM DESC
    </select>

    <!--도서 상세 조회-->
    <select id="bookDetail" resultMap="book">
        SELECT
            B.BOOK_NUM
            , BOOK_TITLE
            , AUTHOR
            , BOOK_PRICE
            , BOOK_STOCK
            , BOOK_INTRO
            , UPLOAD_FILE_NAME
            , IS_MAIN
        FROM
            SHOP_BOOK B INNER JOIN BOOK_IMG I
        ON
            B.BOOK_NUM = I.BOOK_NUM
        WHERE
            B.BOOK_NUM=#{bookNum}
    </select>






<!--    <select id="getNextBookNum" resultType="int">-->
<!--        SELECT IFNULL(MAX(BOOK_NUM),0)+1-->
<!--        FROM SHOP_BOOK-->
<!--    </select>-->

</mapper>































